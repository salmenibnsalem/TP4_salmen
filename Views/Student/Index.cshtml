@model IEnumerable<TP4_salmen.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Student</a>
</p>

<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Student">
    <p>
        <input size="30" placeholder="tapez un Nom" type="search" name="name" />
        <select asp-items="ViewBag.SchoolID" name="schoolid" size=1.5 style="width:300px ; height:30px"></select>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
    </p>
</form>

<a asp-action="Index" asp-controller="Student">All Students</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Birth Date</th>
            <th>School</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentName</td>
                <td>@student.Age</td>
                <td>@student.BirthDate.ToShortDateString()</td>
                <td>@student.School?.SchoolName</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.StudentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
