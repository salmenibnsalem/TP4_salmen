@model TP4_salmen.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

@if (Model != null)
{
    <h3>Are you sure you want to delete this student?</h3>
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.StudentName</dd>

            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@Model.Age</dd>

            <dt class="col-sm-2">Birth Date</dt>
            <dd class="col-sm-10">@Model.BirthDate.ToShortDateString()</dd>

            <dt class="col-sm-2">School</dt>
            <dd class="col-sm-10">@Model.School?.SchoolName</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="StudentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
else
{
    <p>Student data not available.</p>
}
