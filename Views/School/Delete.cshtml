@model TP4_salmen.Models.School

@{
    ViewData["Title"] = "Delete School";
}

<h2>Delete School</h2>

@if (Model != null)
{
    <h3>Are you sure you want to delete this school?</h3>
    <div>
        <h4>School</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.SchoolName</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.SchoolAddress</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SchoolID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
else
{
    <p>School data not available.</p>
}
